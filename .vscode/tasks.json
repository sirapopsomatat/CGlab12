{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (CMake preset)",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build", "--parallel"],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc", "$msCompile", "$clang"]
    },
    {
      "label": "Clean (CMake preset)",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build", "--target", "clean"]
    }
  ]
}
